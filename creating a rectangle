//vamsi 192011429\\5.program to draw a rectangle in a window using opengl.
#include<GL/glu.h>
#include<GL/glut.h>
void MyInit()
{
    glClearColor(0,1,1,1);
    glColor3f(1,0,0);
}
void draw()
{
    glClear(GL_COLOR_BUFFER_BIT);
    glPointSize(5);
    glBegin(GL_LINE_LOOP);
    glVertex2f(-0.3,0.7);
    glVertex2f(0.3,0.7);
    glVertex2f(0.3,-0.7);
    glVertex2f(-0.3,-0.7);
     glEnd();
     glFlush();
}
int main(int c,char *v[])
{
   glutInit(&c,v);
   glutInitWindowPosition(300,300);
   glutInitWindowSize(400,400);
   glutInitDisplayMode(GLUT_RGB | GLUT_SINGLE);
   glutCreateWindow("$$$VAMSI$$$");
   MyInit();
   glutDisplayFunc(draw);
   glutMainLoop();
}
